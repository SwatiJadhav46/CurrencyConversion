                android:width="1dp"
                android:color="@color/LightGrey" />

            <corners android:radius="5dp" />
            <padding android:bottom="10dp" android:left="0dp" android:right="10dp" android:top="10dp" />
        </shape>
        </item>
        <item >
            <bitmap android:gravity="bottom|right" android:src="@drawable/ic_arrow_drop_down_black_24dp"/>
        </item>
    </layer-list>
    </item>
</selector>